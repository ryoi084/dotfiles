!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------
Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
!-------------------------------------------------------------------------------
URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            10000
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           true
URxvt*font: xft:Ricty-Bold:size=12.5:antialias=true

! Imput method
URxvt.inputMethod:			fcitx
URxvt.preeditType:			OnTheSpot

! Fix font space
!URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,xim-onthespot
URxvt.matcher.button:       1
URxvt.urlLauncher:          google-chrome
URxvt.keysym.M-t:           perl:tabbedex:new_tab
URxvt.keysym.M-n:           perl:tabbedex:next_tab
URxvt.keysym.M-p:           perl:tabbedex:prev_tab
URxvt.tabbed.no-tabbedex-keys: true
URxvt.tabbed.not-consumable-keys: 0xff22, 0xff23, 0xff2a

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

! iso 14755 disable
URxvt*iso14755: false

! Color
! スケスケにするためのパラメータ
! urxvt*shading: 20 
urxvt*shading: 10
URxvt*inheritPixmap: true

! Seoul256 like
URxvt*background:   #3a3a3a
URxvt*foreground:   #d0d0d0

URxvt*cursorColor:  #d0d0d0
URxvt*cursorColor2: #3a3a3a

URxvt*colorBD:      #e4e4e4
URxvt*colorUL:      #e4e4e4

!black
URxvt*color0:       #4e4e4e
URxvt*color8:       #626262

!red
URxvt*color1:       #d68787
URxvt*color9:       #d75f87

!green
URxvt*color2:       #00ff00
URxvt*color10:      #87af87

!yellow
URxvt*color3:       #d8af5f
URxvt*color11:      #ffd787

!blue
URxvt*color4:       #85add4
URxvt*color12:      #add4fb

!magenta
URxvt*color5:       #d7afaf
URxvt*color13:      #ffafaf

!cyan
URxvt*color6:       #87afaf
URxvt*color14:      #87d7d7

!white
URxvt*color7:       #d0d0d0
URxvt*color15:      #e4d4d4

!-------------------------------------------------------------------------------
! Emacs settings
!-------------------------------------------------------------------------------
! 透明にできない...
Emacs*foreground: white
Emacs*background: black

!emacs.transparent: false
!emacs*shading: 10

